<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:gravity="top|center"
    android:background="@drawable/back12"
    tools:context=".MainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="1400dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Touche blanche -->

                <Button
                    android:id="@+id/button1"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button1"
                    android:background="@drawable/black_piano_key" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button2"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button3"
                    android:background="@drawable/black_piano_key" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button4"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button5"
                    android:background="@drawable/black_piano_key" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button6"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button8"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button7"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button9"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button8"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button10"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button9"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button10"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button12"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button11"
                    android:background="@drawable/white_piano_key" />

                <Button
                    android:id="@+id/button13"
                    android:layout_width="48dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button12"
                    android:background="@drawable/white_piano_key" />

                <!-- Touche noire (entre certaines touches blanches) -->
                <Button
                    android:id="@+id/sharp2"
                    android:layout_width="30dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="50dp"
                    android:layout_toRightOf="@id/button2"
                    android:background="@drawable/black_piano_key" />

                <Button
                    android:id="@+id/sharp4"
                    android:layout_width="30dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="50dp"
