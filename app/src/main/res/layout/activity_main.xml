                    android:background="@drawable/black_piano_key" />

                <Button
                    android:id="@+id/sharp5"
                    android:layout_width="30dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="-15dp"
                    android:layout_marginTop="50dp"
